{
    "manifest_version": 3,
    "name": "DeAnnoy",
    "description": "Makes the internet better by changing he/she to they.",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    
    "background": {
        "service_worker": "service-worker.js"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content_scripts/script.js"]
        }
    ]
}